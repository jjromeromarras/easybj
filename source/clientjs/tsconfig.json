{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "watch": false, 
    "outDir": "./build",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
     "lib": [
      "es2015",
      "dom"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "./node_modules",
    "./build",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "src/app/main*.ts",
    "src/app/polyfill.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
   "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "entryModule": "src/app/modules/main.module#MainModule",
    "fullTemplateTypeCheck": true,
    "preserveWhiteSpace": false,
    "skipMetadataEmit": true
  }
}
